<div class="add-form">
  <h5 class="add-form-heading">Add new comment</h5>
  <form
    class="add-form-form"
    method="POST"
    action="/comments/<%= employee.id %>/create"
  >
    <div class="form-group form-title">
      <label for="comment_content"> Comment </label>
      <textarea
        rows="5"
        id="comment_content"
        type="a"
        class="form-control"
        name="comment_content"
        placeholder="comment content"
        required
        maxlength="200"
      ></textarea>

      <label for="author"> Author </label>
      <input
        id="author"
        type="text"
        class="form-control"
        name="author"
        placeholder="author name"
        required
        maxlength="30"
      />
    </div>
    <div class="form-group form-submit">
      <button type="submit" class="btn btn-primary">Add</button>
    </div>
  </form>
</div>
