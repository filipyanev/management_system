<ul class="list-group">
  <%if (employees.length === 0) { %>
  <div class="empty-msg">No employees found</div>
  <% } %> <%if (employees.length > 0) { %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Department</th>
        <th scope="col">Line Manager</th>
        <th style="text-align: right" scope="col">Salary</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < employees.length; i++) { %>
      <tr onclick="window.location = '/employees/<%= employees[i].id %>'">
        <td><%= employees[i].name %></td>
        <td><%= employees[i].department %></td>
        <td><%= employees[i].line_manager %></td>
        <td style="text-align: right"><%= employees[i].salary %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% } %>
</ul>
